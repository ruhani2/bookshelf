<%= form_with(model: book, local: true) do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :isbn %>
        <%= form.text_field :isbn, { class: "form-control", placeholder: "Please enter isbn" } %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, { class: "form-control", placeholder: "Please enter book title" } %>
      </div>
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :author_id %>
        <%= form_tag.text_field :author_name, { class: "form-control", placeholder: "Please enter name of the author" } %>
        <%= form.text_field :author_id, { class: "hidden form-control", placeholder: "Please enter name of the author" } %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :language %>
        <%= form.text_field :language, { class: "form-control", placeholder: "Please enter langugae of book" } %>
      </div>
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
        <%= form.label :description %>
        <%= form.text_area :description, { class: "form-control", placeholder: "Tell me little about the book" } %>
      </div>
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.submit 'Save Book', :class=> "btn btn-info form-control"%>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= link_to 'Back', books_path, { class: "btn btn-info form-control", style: "color: white"}%>
      </div>
    </div>
  </div>
<% end %>
